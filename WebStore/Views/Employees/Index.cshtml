
@model IEnumerable<Employee>
@{ Layout = "_LayoutEmployees"; }




<h3>Сотрудники</h3>

<a asp-action="Edit" asp-route-id=-666>
    <i class="fa fa-save"></i>
</a>

<table class="table">

    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
<tr>


    <td>@employee.LastName</td>
    <td>@employee.FirstName</td>
    <td>@employee.Patronymic</td>
    <td>@employee.Age</td>
    <td>
        <a asp-action="EmployeeCard" asp-route-id="@employee.Id">
            <i class="fa fa-info-circle"></i>
        </a>|<a asp-action="Edit" asp-route-id="@employee.Id">
            <i class="fa fa-edit"></i>
        </a>|<a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">
            <i class="fa fa-trash-o"></i>
        </a>
    </td>
</tr>}
    </tbody>
</table>

<hr />
<a asp-controller="Home" asp-action="Index">Домой</a>



